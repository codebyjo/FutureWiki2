<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.association :role %>
  </div>


<div class="field">
  <%= f.label :password %><br>
  <%= f.password_field :password, placeholder: "Leave blank if unchanged" %>
</div>


<!--
<div class="form-inputs">

  </div> -->



  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
